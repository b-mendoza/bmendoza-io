---
import { cn } from '~/utils/cn';
import { BaseLink } from './base-link.component.tsx';
import type { BaseLinkProps } from './base-link.component.tsx';
import { PARAGRAPH_SIZES } from './paragraph.component.tsx';

type Props = Omit<BaseLinkProps, 'children'>;

const { className, ...restOfProps } = Astro.props;
---

<BaseLink
  className={cn(
    'rounded-2xl bg-white px-[2.2rem] py-[1.4rem] font-medium text-violet-glow hover:bg-black hover:text-white focus-visible:bg-black focus-visible:text-white',
    PARAGRAPH_SIZES.lg,
    className,
  )}
  {...restOfProps}
>
  <slot />
</BaseLink>
